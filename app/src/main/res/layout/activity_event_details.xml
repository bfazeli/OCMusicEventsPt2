<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="edu.orangecoastcollege.cs273.bfazeli.ocmusicevents.EventDetailsActivity"
    android:orientation="vertical"
    android:weightSum="13">

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_weight="10"
        android:id="@+id/eventImageView"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventTitleTextView"
        android:textSize="50sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventDateDayTextView"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventTimeTextView"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventLocationTextView"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventAddress1TextView"
        android:layout_marginLeft="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventAddress2TextView"
        android:layout_marginLeft="20dp" />
</LinearLayout>
